/* 
  You MUST have the following plugins installed for
  these settings to work:

  1. Better Jinja (https://marketplace.visualstudio.com/items?itemName=samuelcolvin.jinjahtml)
  2. Black Formatter (https://marketplace.visualstudio.com/items?itemName=ms-python.black-formatter)
  3. HTML CSS Support (https://marketplace.visualstudio.com/items?itemName=ecmel.vscode-html-css)

  If you don't want the Bootstrap CSS intellisense for
  autocompletion, remove the "css.styleSheets" object
  on lines 22-27.
*/

{
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": false
  },
  "css.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css",
    "/style.css",
    "style.css",
    "${fileBasenameNoExtension}.css"
  ],
  "emmet.includeLanguages": {
    "jinja-html": "html"
  },
  "files.associations": {
    "*.html": "jinja-html"
  },
}